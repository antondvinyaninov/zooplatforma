#!/bin/bash

echo "ðŸš€ Starting project..."

# Kill processes on ports 3000, 8080, and 8081
echo "ðŸ§¹ Cleaning up ports..."
lsof -ti:3000 | xargs kill -9 2>/dev/null || true
lsof -ti:8080 | xargs kill -9 2>/dev/null || true
lsof -ti:8081 | xargs kill -9 2>/dev/null || true

echo "âœ… Ports cleared"

# Start backend with Air
echo "ðŸ”§ Starting backend on port 8080 (with hot reload)..."
cd backend && /Users/dvinyaninov/go/bin/air &
BACKEND_PID=$!

# Wait a bit for backend to start
sleep 2

# Start frontend
echo "âš›ï¸  Starting web frontend on port 3000..."
cd frontend && npm run dev &
FRONTEND_PID=$!

# Start mobile
echo "ðŸ“± Starting mobile on port 8081..."
cd mobile && npm run web &
MOBILE_PID=$!

echo ""
echo "âœ… Project is running!"
echo "   Web:     http://localhost:3000"
echo "   Mobile:  http://localhost:8081"
echo "   Backend: http://localhost:8080"
echo ""
echo "Press Ctrl+C to stop all services"

# Wait for Ctrl+C
trap "kill $BACKEND_PID $FRONTEND_PID $MOBILE_PID 2>/dev/null; exit" INT
wait
