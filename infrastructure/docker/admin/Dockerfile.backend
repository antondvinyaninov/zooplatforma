# Admin Backend Dockerfile
FROM golang:1.25-alpine AS builder

WORKDIR /app

RUN apk add --no-cache git

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=1 GOOS=linux go build -o admin-server .

FROM alpine:latest

WORKDIR /app

RUN apk add --no-cache sqlite-libs

COPY --from=builder /app/admin-server .

RUN mkdir -p /app/database

EXPOSE 9000

CMD ["./admin-server"]
